{
  "name": "honkbeep",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "webpack serve -c webpack.client.config.js --port 3000",
    "start:production": "webpack serve -c webpack.client.config.js --env production --port 5000",
    "start:server": "webpack -c webpack.server.config.js --watch",
    "start:storybook": "start-storybook -p 6006",
    "build": "yarn build:client && yarn build:server",
    "build:client": "webpack -c webpack.client.config.js --env production --progress",
    "build:server": "webpack -c webpack.server.config.js --progress",
    "build:storybook": "build-storybook -o ./build/storybook",
    "deploy": "yarn deploy:client && yarn deploy:server",
    "deploy:client": "webpack -c webpack.client.config.js --no-devtool --env production --env deploy",
    "deploy:server": "webpack -c webpack.server.config.js --no-devtool --env production --env deploy",
    "analyze": "webpack-bundle-analyzer ./build/client/stats.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:build": "yarn build && yarn build:storybook",
    "test:all": "yarn lint && yarn test && yarn test:build",
    "lint": "eslint . && prettier . -c",
    "lint:fix": "eslint . --fix && prettier . --write",
    "prepare": "husky install"
  },
  "dependencies": {
    "@babel/core": "^7.13.15",
    "@storybook/addon-essentials": "^6.2.7",
    "@storybook/react": "^6.2.7",
    "@svgr/webpack": "^5.5.0",
    "@testing-library/jest-dom": "^5.11.10",
    "@testing-library/react": "^11.2.6",
    "@types/chroma-js": "^2.1.3",
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.37",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "assert-browserify": "^2.0.0",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.2.2",
    "compression-webpack-plugin": "^7.1.2",
    "css-loader": "^5.2.1",
    "css-minimizer-webpack-plugin": "^2.0.0",
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^8.2.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-flowtype": "^5.7.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.3.5",
    "eslint-plugin-json": "^2.1.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-testing-library": "^3.10.2",
    "file-loader": "^6.2.0",
    "husky": "^6.0.0",
    "hygen": "^6.0.4",
    "identity-obj-proxy": "^3.0.0",
    "image-webpack-loader": "^7.0.1",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "mini-css-extract-plugin": "^1.4.1",
    "prettier": "^2.2.1",
    "style-loader": "^2.0.0",
    "terser-webpack-plugin": "^5.1.1",
    "ts-jest": "^26.5.4",
    "ts-loader": "^8.1.0",
    "typescript": "^4.2.4",
    "webpack-bundle-analyzer": "^4.4.1",
    "webpack-dev-server": "^3.11.2"
  }
}
