{
  "name": "honkbeep",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "webpack serve -c webpack.client.config.js --port 3000",
    "start:storybook": "start-storybook -p 6006",
    "build:storybook": "build-storybook -o ./build/storybook",
    "analyze": "webpack-bundle-analyzer ./build/client/stats.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:build": "yarn build && yarn build:storybook",
    "test:all": "yarn lint && yarn test && yarn test:build",
    "lint": "eslint . && prettier . -c",
    "lint:fix": "eslint . --fix && prettier . --write",
    "prepare": "husky install"
  },
  "dependencies": {
    "@babel/core": "^7.14.0",
    "@storybook/addon-essentials": "^6.2.9",
    "@storybook/react": "^6.2.9",
    "@svgr/webpack": "^5.5.0",
    "@testing-library/jest-dom": "^5.12.0",
    "@types/chroma-js": "^2.1.3",
    "@types/node": "^15.0.2",
    "@typescript-eslint/eslint-plugin": "^4.22.1",
    "@typescript-eslint/parser": "^4.22.1",
    "assert-browserify": "^2.0.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-flowtype": "^5.7.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-json": "^3.0.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-testing-library": "^4.2.1",
    "husky": "^6.0.0",
    "hygen": "^6.1.0",
    "image-webpack-loader": "^7.0.1",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.0",
    "ts-jest": "^26.5.6",
    "typescript": "^4.2.4",
    "webpack-bundle-analyzer": "^4.4.1"
  },
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "jest": "^26.6.3"
  }
}
